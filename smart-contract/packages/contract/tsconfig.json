{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "include": [
    "src/**/*",
    "tasks/**/*",
    "test/**/*",
    "deploy/**/*",
    "types/"
  ],
  "references": [
    {
      "path": "../../tsconfig.json"
    }
  ],
  "extends": "../../tsconfig.json"
}
